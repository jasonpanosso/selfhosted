{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "description": "Cert-Manager Group",
      "groupName": "Cert-Manager",
      "matchDatasources": ["docker"],
      "matchPackageNames": ["/cert-manager/"],
      "group": {
        "commitMessageTopic": "{{{groupName}}} group"
      }
    },
    {
      "description": "External Secrets Operator Group",
      "groupName": "External Secrets Operator",
      "matchDatasources": ["docker"],
      "matchPackageNames": ["/external-secrets/"],
      "group": {
        "commitMessageTopic": "{{{groupName}}} group"
      }
    },
    {
      "description": "Flux Operator Group",
      "groupName": "Flux Operator",
      "matchDatasources": ["docker"],
      "matchPackageNames": ["/flux-operator/", "/flux-instance/"],
      "group": {
        "commitMessageTopic": "{{{groupName}}} group"
      }
    },
    {
      "description": "Rook-Ceph Group",
      "groupName": "Rook-Ceph",
      "matchDatasources": ["docker"],
      "matchPackageNames": ["/rook-ceph/", "/rook-ceph-cluster/"],
      "group": {
        "commitMessageTopic": "{{{groupName}}} group"
      }
    },
    {
      "description": "CloudNativePG Group",
      "groupName": "CloudNativePG",
      "matchDatasources": ["docker"],
      "matchPackageNames": ["/cloudnative-pg/", "/db/"],
      "group": {
        "commitMessageTopic": "{{{groupName}}} group"
      }
    },
    {
      "description": "Kyverno Group",
      "groupName": "Kyverno",
      "matchDatasources": ["docker"],
      "matchPackageNames": ["/kyverno/", "/kyverno-policies/"],
      "group": {
        "commitMessageTopic": "{{{groupName}}} group"
      }
    },
    {
      "description": "Kube-Prometheus-Stack Group",
      "groupName": "Kube-Prometheus-Stack",
      "matchDatasources": ["docker"],
      "matchPackageNames": [
        "/kube-prometheus-stack/",
        "/prometheus-operator-crds/"
      ],
      "group": {
        "commitMessageTopic": "{{{groupName}}} group"
      }
    },
    {
      "description": "Grafana Group",
      "groupName": "Grafana",
      "matchDatasources": ["docker"],
      "matchPackageNames": ["/grafana/"],
      "group": {
        "commitMessageTopic": "{{{groupName}}} group"
      }
    },
    {
      "description": "Traefik Group",
      "groupName": "Traefik",
      "matchDatasources": ["docker"],
      "matchPackageNames": ["/traefik/", "/traefik-config/"],
      "group": {
        "commitMessageTopic": "{{{groupName}}} group"
      }
    },
    {
      "description": "OpenTelemetry Group",
      "groupName": "OpenTelemetry",
      "matchDatasources": ["docker"],
      "matchPackageNames": [
        "/target-allocator/",
        "/opentelemetry-operator/",
        "/opentelemetry-collector-k8s/",
        "/opentelemetry-collector-contrib/"
      ],
      "group": {
        "commitMessageTopic": "{{{groupName}}} group"
      }
    }
  ]
}
