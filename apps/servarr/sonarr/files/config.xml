<Config>
  <BindAddress>*</BindAddress>
  <Port>8989</Port>
  <SslPort>9898</SslPort>
  <EnableSsl>False</EnableSsl>
  <LaunchBrowser>True</LaunchBrowser>
  <ApiKey>{{.Values.sonarr.apiKey}}</ApiKey>
  <AuthenticationMethod>External</AuthenticationMethod>
  <AuthenticationRequired>DisabledForLocalAddresses</AuthenticationRequired>
  <Branch>main</Branch>
  <LogLevel>debug</LogLevel>
  <SslCertPath></SslCertPath>
  <SslCertPassword></SslCertPassword>
  <UrlBase></UrlBase>
  <InstanceName>Sonarr</InstanceName>
  <UpdateMechanism>Docker</UpdateMechanism>
  <PostgresPort>5432</PostgresPort>
  <PostgresUser>{{.Values.sonarr.db.user}}</PostgresUser>
  <PostgresPassword>{{.Values.sonarr.db.password}}</PostgresPassword>
  <PostgresHost>{{.Values.pgcluster.name}}-rw.servarr.svc.cluster.local</PostgresHost>
  <PostgresMainDb>{{.Values.sonarr.db.mainDB}}</PostgresMainDb>
  <PostgresLogDb>{{.Values.sonarr.db.logDB}}</PostgresLogDb>
</Config>
